<%- include('templates/header.ejs') %>
   <section class="films-container">
      <h1>Tus películas favoritas</h1>
      <div class="grid-container">
         <% data.forEach(element=> { %>
            <div class="movie-card">
               <div class="info-section">
                  <div class="movie-header">
                     <div class="movie-img">
                        <img class="img-mini" src="<%= element.image %>" alt="portada de la película">
                     </div>
                     <div class="datos">
                        <h1>
                           <%= element.title %> , <%= element.year %>
                        </h1>
                        <h4>
                           <%= element.direction %>
                        </h4>
                        <h4>
                           <%=`${element.stars}`%>
                        </h4>
                        <span>
                           <%= ${element.gender} %> , <%=${element.length}%>
                        </span>
                     </div>
                     <div class="movie-buttons">
                        <div class="false-button"><a href="/remove/<%= element.idfilms %>">Quitar de favoritos</a></div>
                        <div class="false-button"><a href="view/<%= element.id %>">Ver más</a></div>
                     </div>
                  </div>
               </div>
               <% }) %>

                     <%- include('templates/footer.ejs') %>
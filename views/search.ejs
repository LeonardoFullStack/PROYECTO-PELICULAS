

<%- include('templates/header.ejs') %>

        <% if (query) { %>
            <section class="form-container">
                <h2>
                    Buscador de películas:
                </h2>
            <div class="container">
                <div class="busqueda">
                    <form class="search-f" method="get" action="/search/">
                        <input type="hidden" name="pag" value="1">
                        <input class="search-t" type="text" name="query" placeholder="Título">
                        <input class="sub" type="submit" value="buscar">
                    </form>
            </section>

    <section class="films-container">
        <div class="grid-container">

            <% data.forEach(element=> { %>
                <div class="movie-card">
                    <div class="info-section">
                        <div class="movie-header">
                            <div class="movie-img">
                                <img class="img-mini" src="<%= element.image %>" alt="portada de la película">

                            </div>
                            <div class="datos">
                                <h2>
                                    <%=`${element.title}`%>
                                </h2>
                                <h4>
                                    <%=`${element.description}`%>
                                </h4>
                                <span>Año</span>
                                <h4>
                                    <%=`${element.runtimeStr}`%>
                                </h4>
                                <span> duración (min)</span>
                                <h4>
                                    <%=`${element.stars}`%>
                                </h4>
                                <span>Dirección y reparto</span>
                                <h4>
                                    <%=`${element.genres}`%>
                                </h4>
                                <span>Género duración (min)</span>
                            </div>
                        </div>
                        <div class="movie-buttons">
                            <div class="false-button"><a href="/search/add/<%= element.id %>">Aniadir a favoritos</a></div>
                            <div class="false-button"><a href="view/<%= element.id %>">Ver más</a></div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <% } else { %>
            <section class="form-container">
                <h2>
                    Buscador de películas:
                </h2>
                <form class="search-f" method="get" action="/search/">
                    <input type="hidden" name="pag" value="1">
                    <input class="search-t" type="text" name="query" placeholder="Título">
                    <input class="sub" type="submit" value="buscar">
                </form>
            </section>

            <%} %>
                <h3>
                    Páginas
                </h3>
                <% if (query) { %>
                    <% for( let index=1; index <=paginas; index++ ) { %>
                        <a href="./?pag=<%= index %>&query=<%= busqueda %>">
                            <button>
                                <%= index %>
                            </button>
                        </a>
                        <% } %>

                            <% } %>
                                </main>
                                